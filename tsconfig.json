{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],

        /* Building */
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "emitDeclarationOnly": false,

        /* Module Resolution*/
        "moduleResolution": "node",
        "isolatedModules": true,
        "moduleDetection": "force",
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true
    },
}
